(--def-const if_ (lambda (predicate consequence otherwise)
    (cond (predicate consequence)
          (else otherwise))))

(--def-const neg (lambda (x) (- 0 x)))

(--def-const or (lambda (a b)
    (cond (a true)
          (b true)
          (else false))))

(--def-const gteq (lambda (a b) (or (> a b) (= a b))))

(--def-const max (lambda (a b)
    (if_ (gteq a b)
         a
         b)))

